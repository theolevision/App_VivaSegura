<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/rc82pytv2qkr"
        android:layout_width="258dp"
        android:layout_height="155dp"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:text="VIVA SEGURA"
        android:textColor="#8544FE"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.562"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/fundo_roxo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/background_purple_rounded"
        android:paddingTop="31dp"
        android:paddingBottom="77dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rc82pytv2qkr"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/login"
        android:layout_width="336dp"
        android:layout_height="55dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/white_input_box"
        android:ems="10"
        android:inputType="text"
        android:hint="Inserir email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rc82pytv2qkr" />

    <EditText
        android:id="@+id/password"
        android:layout_width="336dp"
        android:layout_height="55dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/white_input_box"
        android:ems="10"
        android:inputType="text"
        android:hint="Inserir senha"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login" />

    <Button
        android:id="@+id/login_button"
        android:layout_width="197dp"
        android:layout_height="53dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="@color/white"
        android:text="Entrar"
        android:textColor="#101313"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password" />

    <Button
        android:id="@+id/login_google"
        android:layout_width="277dp"
        android:layout_height="59dp"
        android:layout_marginTop="48dp"
        android:backgroundTint="@color/white"
        android:text="Continuar com Google"
        android:textColor="#101313"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_button" />

    <TextView
        android:id="@+id/seu_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="NÃ£o possui conta? Registre-se"
        android:textColor="#101313"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_google" />
</androidx.constraintlayout.widget.ConstraintLayout>